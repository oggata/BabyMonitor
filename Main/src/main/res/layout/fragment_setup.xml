<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="braunster.babymonitor.activities.MonitorActivity$PlaceholderFragment"
    android:background="@color/app_yellow"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_content"
            android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Ip"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:id="@+id/txt_phone_ip"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/linear_client_server_select_buttons"
                    android:padding="20dp">


                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/baby_button_selector_blue"
                        android:id="@+id/btn_start_client"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/btn_start_server"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/parent_button_selector_blue"/>
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:typeface="monospace"
                    android:ems="10"
                    android:layout_marginTop="35dp"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/et_server_ip"
                    android:hint="Server Ip"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:typeface="monospace"
                    android:ems="10"
                    android:id="@+id/et_server_port"
                    android:hint="Server Port"
                    android:visibility="gone"/>

            </LinearLayout>

    </RelativeLayout>
</LinearLayout>
